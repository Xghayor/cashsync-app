<div class="form-container">
    <h1>Create a New Category</h1>

    <%= form_with model: [@user, @group], class: "category-form" do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :icon %>
        <%= f.text_field :icon %>
      </div>

      <%= f.submit "Save" %>
    <% end %>

    <%= link_to "Back", root_path %>
  </div>