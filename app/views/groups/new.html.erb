<h1>Create a New Category</h1>

<%= form_with model: [@user, @group] do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :icon %>
    <%= f.text_field :icon %>
  </div>

  <%= f.submit "Create Category" %>
<% end %>

<%= link_to "Back to Categories", user_groups_path(@user) %>
